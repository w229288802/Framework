<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 配置struts2编码 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 配置struts2后缀名do-->
	<constant name="struts.action.extension" value="web,action"/>
	<!-- 配置struts2主题 -->
	<constant name="struts.ui.theme" value="simple"/>
	<!-- 配置struts2开发模式 -->
	<constant name="struts.devMode" value="true"/>
	<!-- 配置struts自动重载xml文件 -->
	<constant name="struts.configuration.xml.reload" value="true"/>
	
	<constant name="struts.convention.package.locators" value="web,action"></constant>
	
	<constant name="struts.convention.action.name.separator" value="-"></constant>	
	<!--配置使用了convention注解的默认父包  -->  
    <constant name="struts.convention.default.parent.package" value="json-convention-default"/>  
	
	
	<package name="json-convention-default" extends="convention-default">
		<!-- JSON插件复制过来的 -->
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
		<!-- JSON插件复制过来的 -->
        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
            <interceptor name="jsonValidation" class="org.apache.struts2.json.JSONValidationInterceptor"/>

            <!-- Sample JSON validation stack -->
            <interceptor-stack name="jsonValidationWorkflowStack">
                <interceptor-ref name="basicStack"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="jsonValidation"/>
                <interceptor-ref name="workflow"/>
            </interceptor-stack>

        </interceptors>
		<!-- 全局JSON 返回结果类型 -->
		<global-results>
      		<result name="json" type="json"></result>
      	</global-results>
    </package>
	
	

</struts>